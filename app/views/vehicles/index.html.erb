<h1 class = "text-center">Vehicles list</h1>
<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

<div class="container text-center">

    <div class="row">

      <% @vehicles.each do |vehicle| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_url 'peugeot205.png' %>);">
          <div class="avatar-card" style="background-image: url(<%= asset_path('logo') %>);"></div>
                <div class="card-description text-left">

                  <h2><%= vehicle.name %></h2>
                  <h3> <%= vehicle.category.name %></3>
                  <h3> <%= vehicle.price %>â‚¬/day</h3>
                <%= link_to "show this vehicle", vehicle_path(vehicle), class: 'btn btn-success'%>
                </div>

          </div>
        </div>
      <% end %>

    </div>

</div>


